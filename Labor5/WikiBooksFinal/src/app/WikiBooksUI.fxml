    <HBox>
        <TextField fx:id="searchTitle" promptText="Bitte Titel eingeben!" />
        <Button onAction="#onClickSearchTitle" text="Suchen" />
    </HBox>

    <WebView fx:id="viewBook" VBox.vgrow="ALWAYS" />

    <GridPane hgap="20" alignment="CENTER_LEFT">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        </columnConstraints>

        <HBox spacing="5" style="-fx-border-color: lightgray; -fx-border-width: 0 1 0 0;" GridPane.columnIndex="0">
            <Label text="Letzter Bearbeiter: "/>
            <Label fx:id="lastUsernameValue" text="N/A"/>
        </HBox>

        <HBox spacing="5" style="-fx-border-color: lightgray; -fx-border-width: 0 1 0 0;" GridPane.columnIndex="1">
            <Label text="Letzte Ã„nderung: "/>
            <Label fx:id="lastChangeValue" text="N/A"/>
        </HBox>

        <HBox spacing="5" GridPane.columnIndex="2">
            <Label text="Regal: "/>
            <Label fx:id="regalValue" text="N/A"/>
        </HBox>
    </GridPane>
</VBox>
