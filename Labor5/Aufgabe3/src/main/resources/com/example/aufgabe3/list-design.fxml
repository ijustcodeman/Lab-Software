<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="191.0" prefWidth="351.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aufgabe3.Controller">
    <HBox prefHeight="51.0" prefWidth="351.0" spacing="20.0">
        <padding>
            <Insets bottom="1.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <TextField fx:id="addText" prefWidth="200" promptText="Bitte Begriffe Hinzufügen!" />
        <Button onAction="#onClickAdd" text="Hinzufügen" prefWidth="80" />

    </HBox>
    <HBox prefHeight="115.0" prefWidth="261.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="1.0" />
        </padding>
        <ListView fx:id="viewText" prefWidth="200" prefHeight="200" />
        <Button onAction="#onClickReset" text="Reset" prefWidth="80"/>
    </HBox>
</VBox>
